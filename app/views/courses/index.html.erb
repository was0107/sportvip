<%= link_to '新建', new_course_path %>
<%= paginate @courses %>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>名称</th>
      <th>描述</th>
      <th>价格</th>
      <th colspan="3" width = "120px">编辑</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.price %></td>
        <td><%= link_to '查看', course %></td>
        <td><%= link_to '编辑', edit_course_path(course) %></td>
        <td><%= link_to '删除', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @courses %>
