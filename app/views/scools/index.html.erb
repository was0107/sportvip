
<%= link_to '新建', new_scool_path %>
<%= paginate @scools %>
<br>
<br>

<table width="100%">
  <thead>
    <tr>
      <th>名称</th>
      <th>电话</th>
      <th>链接</th>
      <th>图片</th>
      <th>描述</th>
      <th>地址</th>
      <th>经度</th>
      <th>纬度</th>
      <th colspan="3" width = "120px">编辑</th>
    </tr>
  </thead>

  <tbody>
    <% @scools.each do |scool| %>
      <tr>
        <td><%= scool.name %></td>
        <td><%= scool.telephone %></td>
        <td><%= scool.url %></td>
        <td><%= scool.profile_image_url %></td>       
        <td><%= scool.description %></td>
        <td><%= scool.location %></td>
        <td><%= scool.latitude %></td>
        <td><%= scool.longitude %></td>

        <td><%= link_to '查看', scool %></td>
        <td><%= link_to '编辑', edit_scool_path(scool) %></td>
        <td><%= link_to '删除', scool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @scools %>


