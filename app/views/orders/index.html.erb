
<%= link_to '新建', new_order_path %>
<%= paginate @orders %>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>订单号</th>
      <th>创建时间</th>
      <th>支付时间</th>
      <th>状态</th>
      <th colspan="3" width = "120px">编辑</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.num %></td>
        <td><%= order.create_time %></td>
        <td><%= order.pay_time %></td>
        <td><%= order.status %></td>
        <td><%= link_to '查看', order %></td>
        <td><%= link_to '编辑', edit_order_path(order) %></td>
        <td><%= link_to '删除', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @orders %>
