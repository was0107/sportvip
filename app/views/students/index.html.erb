
<%= link_to '新建', new_student_path %>
<%= paginate @students %>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>名称</th>
      <th>电话</th>
      <th>性别</th>
      <th>父母</th>
      <th>是否是默认</th>
      <th colspan="3" width = "120px">编辑</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.telephone %></td>
        <td><%= student.gender %></td>
        <td><%= student.parent %></td>
        <td><%= student.is_default_contact %></td>
        <td><%= link_to '查看', student %></td>
        <td><%= link_to '编辑', edit_student_path(student) %></td>
        <td><%= link_to '删除', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @students %>
